<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.kayleh.diyTomcat.webappservlet.HelloServlet</servlet-class>
        <init-param>
            <param-name>author</param-name>
            <param-value>kayleh(servlet)</param-value>
        </init-param>
        <init-param>
            <param-name>site</param-name>
            <param-value>http://Kayleh.cn(servlet)</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
</web-app>